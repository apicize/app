{
  "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
  "identifier": "apicize",
  "productName": "Apicize",
  "version": "0.17.1",
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Apicize",
        "width": 1300,
        "height": 800,
        "minWidth": 800,
        "minHeight": 700
      }
    ]
  },
  "build": {
    "beforeBuildCommand": "yarn && yarn build",
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "homepage": "https://www.apicize.com",
    "copyright": "2025 Jason Terando",
    "license": "MIT",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "description": "Apicize workbook",
        "ext": [
          "apicize"
        ]
      }
    ],
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "shortDescription": "Apicize is an HTTP testing tool",
    "longDescription": "This package installs the Apicize GUI for creating and executing HTTP calls.  There is a separate CLI runner for tests, see www.apcicze.com",
    "macOS": {
      "entitlements": "./entitlements.plist",
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [
      "./help"
    ],
    "targets": [
      "deb",
      "rpm",
      "dmg",
      "app",
      "msi"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}