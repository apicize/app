{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "es2021",
    "module": "esnext",
    "lib": [
      "dom",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "useDefineForClassFields": true,
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "__tests__",
    "./test-editor.d.ts",
    "./dist/**/*",
    "vitest.config.ts",
    "release/build",
    "release/app/dist",
    ".erb/dll",
    "node_modules"
  ]
}